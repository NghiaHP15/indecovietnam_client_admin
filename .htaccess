# Bật Rewrite Engine
RewriteEngine On

# Định nghĩa biến môi trường API_URL
SetEnv API_URL "http://localhost:5000"

# Chuyển hướng tất cả các request về index.html (dành cho React Router)
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]